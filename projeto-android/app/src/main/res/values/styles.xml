<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#E6E6E6</item>
        <item name="colorControlActivated">#AAAAAA</item>
        <item name="android:textColor">#1C1C1C</item>
        <item name="android:textColorPrimaryInverse">#1C1C1C</item>
        <item name="android:textColorSecondaryInverse">#1C1C1C</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#EDE8E8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/color3</item>
        <item name="colorControlNormal">@color/color8</item> //Separados das datas no dialog de data
        <item name="colorControlActivated">@color/color8</item> //ActivityIndicator
        <item name="colorControlHighlight">@color/color8</item> //Selecionando item da ListView
    </style>

</resources>